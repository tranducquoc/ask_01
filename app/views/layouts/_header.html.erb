<header class="navbar navbar-fixed-top">
  <div class="container">
    <a id="logo" href="/">
      <%= image_tag "apple-touch-icon@2.png",
        class: "img_logo", alt: "Ask & answer" %>
    </a>
    <nav class="navbar-cus">
      <div class="search-bar">
        <div class="wr-search">
          <form class="" action="/search" method="get">
            <div class="input-group add-on selector_input_interaction">
              <input class="form-control" placeholder="Search"
                name="word_search" id="srch-term" type="text"
                  value="<%= params[:word_search] %>">
              <div class="input-group-btn">
                <button class="btn btn-default" type="submit">
                  <i class="glyphicon glyphicon-search"></i>
                </button>
              </div>
            </div>

            <div class="result-question-search">
              <div class="inner-load-result">

              </div>
            </div>
          </form>
        </div>
      </div>
      <ul class="nav navbar-nav navbar-right">
        <li><a href="/"><%= t "home_page.home" %></a></li>
        <% if user_signed_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "home_page.account" %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu dash-profile">
              <li><a href="#"><%= t "home_page.profile" %></a></li>
              <li>
                <a href="<%= edit_user_registration_path %>">
                  <%= t "home_page.edit_profile" %>
                </a>
              </li>
              <li class="divider"></li>
              <li>
                <a rel="nofollow" data-method="delete"
                  href="<%= destroy_user_session_path %>">
                  <%= t "home_page.logout" %>
                </a>
              </li>
            </ul>
          </li>
        <% else %>
          <li>
            <%= link_to(t("home_page.login"), new_user_session_path)  %>
          </li>
          <li>
            <%= link_to(t("home_page.sign_up"), new_user_registration_path)  %>
          </li>
        <% end %>

      </ul>
    </nav>
  </div>
</header>
