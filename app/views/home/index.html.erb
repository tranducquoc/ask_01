<section id="home-page">
  <div class="feed-wrap row">
    <% if user_signed_in? %>
      <div class="sidebar-topic-trending col-md-3">
        <%= react_component("HomeListTopic", topicsFollow: @topicsFollow,
          topics: @topics) %>
      </div>
    <% end %>
    <div class="feed-inner-wrap col-md-9">
      <span class="home_main_feed_head">
        <%= t "home_page.top_question_for_you" %></span>

      <% if user_signed_in? %>
        <div class="feed_suggest_ask">
          <div class="user-info">
            <div class="wr-avatar">
              <%= image_tag current_user.avatar.url,
                class: "circle img img_30" %>
            </div>
            <span class="name"><%= current_user.name %></span>
          </div> <!-- .user-info -->
          <div class="wr-suggest-ask">
          <%= link_to t("home_page.sentence_suggest_ask"), new_question_path,
            class: "sentence-suggest-ask" %>
          </div>
        </div> <!-- .feed_suggest_ask -->
      <% end %>

      <div class="question-feed">
        <% @questions.each do |question| %>
          <div class="paged-list-item">
            <div class="feed-item-inner">
              <div class="list-topics">
                <% question.topics.each do |topic| %>
                  <span class="item-topic">
                    <%= link_to topic.name, topic_path(topic.slug),
                      alt: topic.name %>
                  </span>
                <% end %>
              </div>
              <span class="feed-ques-title">
                <%= link_to question.title, question_path(question.slug),
                  alt: question.title %>
              </span>
              <span class="author">
                <a href="<%= user_path(question.user.id) %>" class="link_user">
                  <div class="wr-avatar">
                    <%= image_tag question.user.avatar.url,
                      class: "circle img_40" %>
                  </div>
                  <div class="name">
                    <%= question.user.name %>
                  </div>
                </a>
              </span>
              <div class="time">
                <%= question.updated_at %>
              </div>
              <div class="ques-content marked">
                <%= question.content %>
              </div>
            </div>
          </div> <!-- .paged-list-item -->
        <% end %>

        <%= paginate @questions %>
      </div> <!-- .question-feed -->
    </div>
  </div>
</section>
